<h2>Payment Page</h2>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Product Name</th>
      <th scope="col">Product Description</th>
      <th scope="col">Price</th>
    </tr>
  </thead>
<tbody>
    <tr>
      <th scope="row"><%= @product.id %></th>
      <td><%= @product.name %></td>
      <td><%= @product.description %></td>
      <td><%= @product.price %></td>
    </tr>
  </tbody>
</table>
