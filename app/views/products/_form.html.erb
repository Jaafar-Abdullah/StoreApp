<%= form_for @product do |f| %>
  <div class="field form-group">
    <%= f.label :Product_Name %>:
    <%= f.text_field :name, autofocus: true ,class:"form-control" %>
  </div>

    <div class="field form-group">
    <%= f.label :Description %>:
    <%= f.text_field :description, autofocus: true,class:"form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :Price %>:
    <%= f.text_field :price, autofocus: true ,class:"form-control"%>
  </div>

  <div>
  <%= f.label :image %>
  <%= f.file_field :image_url %>
  </div>
    <%# <%= f.hidden_field , autofocus: true , hidden_field_tag current_user.id, params[:user_id] %>
    <p></p>
<div><%= f.submit class:"btn btn-primary"%></div>
<% end %>


